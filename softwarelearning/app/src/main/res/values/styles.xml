<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo da BottomNavigationView -->
    <style name="Widget.MyApp.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/nav_item_tint</item>
        <item name="itemTextColor">@color/nav_item_tint</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.MyApp.BottomNav.ActiveIndicator</item>
    </style>

    <!-- Cápsula do item ativo -->
    <style name="Widget.MyApp.BottomNav.ActiveIndicator">
        <item name="android:width">56dp</item>
        <item name="android:height">40dp</item>
        <item name="android:insetLeft">8dp</item>
        <item name="android:insetRight">8dp</item>
        <item name="android:insetTop">8dp</item>
        <item name="android:insetBottom">8dp</item>
        <item name="android:color">@color/active_indicator_bg</item>
        <!-- Se tiver Material3 no projeto, mantém; caso contrário pode remover esta linha -->
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

</resources>
