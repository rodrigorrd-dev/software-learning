<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAtividade"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@color/card_background_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tituloAtividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título da Atividade"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Descrição -->
        <TextView
            android:id="@+id/descricaoAtividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Descrição da Atividade"
            android:textSize="14sp"
            android:textColor="#616161"
            android:ellipsize="end"
            android:maxLines="2" />

        <!-- Datas em chips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/dataInicioAtividade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_inicio"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Início: --"
                android:textSize="12sp"
                android:textColor="#0D47A1" />

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/dataFimAtividade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_fim"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Fim: --"
                android:textSize="12sp"
                android:textColor="#C65000" />
        </LinearLayout>

        <!-- Ações (apenas download para aluno) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/iconeDownload"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Baixar arquivo"
                android:src="@drawable/ic_download_24"
                app:tint="#424242" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
