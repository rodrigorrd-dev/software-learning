<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:backgroundTint="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Título da Atividade"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Descrição da atividade"
            android:textColor="#616161"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtDatas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@android:drawable/ic_menu_today"
            android:drawablePadding="6dp"
            android:text="01/09/2025 - 15/09/2025"
            android:textColor="#757575"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ativo"
            android:textColor="#388E3C"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnToggleRespostas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ver respostas"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRespostas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Ícone para abrir modal da IA -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnShowDeepseek"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:contentDescription="Mostrar DeepSeek"
            android:focusable="true"
            android:src="@android:drawable/ic_menu_info_details"
            android:tint="?attr/colorPrimary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
