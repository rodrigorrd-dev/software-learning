<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Campos de Texto -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título"
        android:layout_marginBottom="4dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="1"
            android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição"
        android:layout_marginBottom="6dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:gravity="top"
            android:minLines="2"
            android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Início"
        android:layout_marginBottom="6dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDataInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:minLines="1"
            android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Fim"
        android:layout_marginBottom="8dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDataFim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:minLines="1"
            android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Spinner de Status -->
    <Spinner
        android:id="@+id/spinnerStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/status_array"
        android:layout_marginBottom="8dp"
        android:popupBackground="?attr/colorSurface"
        android:spinnerMode="dropdown"
        android:dropDownWidth="match_parent"
        android:dropDownVerticalOffset="4dp" />

    <!-- Spinner de Curso -->
    <Spinner
        android:id="@+id/spinnerCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/curso_array"
        android:layout_marginBottom="8dp"
        android:popupBackground="?attr/colorSurface"
        android:spinnerMode="dropdown"
        android:dropDownWidth="match_parent"
        android:dropDownVerticalOffset="4dp" />

    <!-- Botões -->
    <Button
        android:id="@+id/btnAdicionarArquivos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Arquivos"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnAdicionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Atividade"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerViews -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewArquivos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAtividades"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
