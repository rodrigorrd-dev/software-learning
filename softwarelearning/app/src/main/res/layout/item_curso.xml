<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp">

        <!-- 1) Área clicável do item no FUNDO (vem primeiro no XML) -->
        <FrameLayout
            android:id="@+id/layoutCurso"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/containerAcoes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- 2) Título -->
        <TextView
            android:id="@+id/textNomeCurso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nome do curso"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/containerAcoes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- 3) Container dos botões (sempre visível e por cima) -->
        <LinearLayout
            android:id="@+id/containerAcoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Botão Editar (TextButton Material) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditar"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/editar"
                android:textAllCaps="false"
                android:textColor="?attr/colorPrimary"/>

            <!-- Espaço pequeno entre os botões -->
            <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <!-- Botão Remover (TextButton Material) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeletar"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/deletar"
                android:textAllCaps="false"
                android:textColor="?attr/colorError"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
