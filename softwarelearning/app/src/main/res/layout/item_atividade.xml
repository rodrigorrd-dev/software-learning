<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:backgroundTint="@color/colorCardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tituloAtividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título da Atividade"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Descrição -->
        <TextView
            android:id="@+id/descricaoAtividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Descrição da Atividade"
            android:textSize="12sp"
            android:textColor="#616161"
            android:ellipsize="end"
            android:maxLines="2" />

        <!-- Datas em chips -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/dataInicioAtividade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_inicio"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Início: --"
                android:textSize="10sp"
                android:textColor="#0D47A1" />

            <Space
                android:layout_width="6dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/dataFimAtividade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_fim"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Fim: --"
                android:textSize="10sp"
                android:textColor="#C65000" />
        </LinearLayout>

        <!-- Ações (download + remover) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="6dp">

            <ImageButton
                android:id="@+id/btnDownload"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Baixar"
                android:src="@drawable/ic_download_24"
                app:tint="#424242"
                tools:ignore="TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemoverAtividade"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remover"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textColor="#D32F2F" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
